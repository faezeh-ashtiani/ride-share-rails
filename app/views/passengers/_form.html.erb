<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<h2>Edit Passenger</h2>
<%= form_with model: @passenger, class: 'passengers' do |f| %>
  <p>Please provide the following information to <%= sentance_end %></p>
  <div>
    <%= f.label :edit_name%>
    <%= f.text_field :name%>
  </div>
  <div>
    <%= f.label :edit_phone_number%>
    <%= f.text_field :phone_num%>
  </div>
  <%= f.submit action_name %>

  <%# f.submit "Edit Passenger", class: 'edit-passenger-button'%>
<%end%>
