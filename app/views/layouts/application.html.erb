<!DOCTYPE html>
<html>
  <head>
    <title>RideShareRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <nav class='navigation-bar'>
      <h3><%= link_to "Rideshare Rails!", root_path %></h3>
      <h3><%= link_to "Drivers", drivers_path %></h3>
      <button>
        <%= link_to 'New Driver', new_driver_path %>
      </button>
      <h3><%= link_to "Passengers", passengers_path %></h3>
      <button>
        <%= link_to 'New Passenger', new_passenger_path %>
      </button>
    </nav>

  </header>
  <body>
    <%= yield %>
  </body>
</html>
